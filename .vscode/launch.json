{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ST-Link: Debug Bootloader",
      "cwd": "${workspaceFolder}/bootloader",
      "executable": "./bootloader.elf",
      "servertype": "stutil",
      "request": "launch",
      "type": "cortex-debug",
      "device": "STM32F767ZI",
      "runToEntryPoint": "main",
      "interface": "swd",
      "preLaunchTask": "build_bootloader"
    },
    {
      "name": "ST-Link: Attach to Application",
      "cwd": "${workspaceFolder}/app",
      "executable": "./firmware.elf",
      "servertype": "stutil",
      "request": "attach",
      "type": "cortex-debug",
      "device": "STM32F767ZI",
      "runToEntryPoint": "main",
      "interface": "swd"
    },
    {
      "name": "ST-Link: Attach to Bootloader",
      "cwd": "${workspaceFolder}/bootloader",
      "executable": "./bootloader.elf",
      "servertype": "stutil",
      "request": "attach",
      "type": "cortex-debug",
      "device": "STM32F767ZI",
      "runToEntryPoint": "main",
      "interface": "swd"
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "/home/out/stm32/sandbox",
      "program": "/home/out/stm32/sandbox/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}